<WelcomeScreen>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 10

        Image:
            source: 'images/delorean.jpg'
            allow_stretch: True
            keep_ration: True

        Button:
            text: 'Get started'
            size_hint: (1, .2)
            on_press: root.manager.current = 'menu'

<MenuScreen>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Image:
            source: 'images/delorean.jpg'
            allow_stretch: True
            keep_ration: True

        Button:
            text: 'Register'
            size_hint: (1, .2)
            on_press: root.manager.current = 'register'

        Button:
            text: 'Login'
            size_hint: (1, .2)
            on_press: root.manager.current = 'login'

<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        pos: self.pos
        size: root.size
        id: test2
        spacing: 25

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'images/delorean.jpg'


        Button:
            size_hint:0.2,0.2
            pos_hint : {'center_x':.1, 'center_y':.1}
            text: 'Bring me back'
            on_press: root.manager.current = 'menu'

        TextInput:
            multiline:False
            id: Email
            hint_text:'Email or Username'
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.5, 0.5
            height:0.5

        TextInput:
            multiline:False
            id: password
            hint_text:'Enter your password'
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.5, 0.5
            spacing: 50

        Button:
            text: 'Log In'
            on_press: root.manager.current = 'homescreen'
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.5, 0.5

<RegisterScreen>:
    BoxLayout:
        orientation: 'vertical'
        pos: self.pos
        size: root.size
        id: test2
        spacing: 25

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'images/delorean.jpg'

        Button:
            size_hint:0.2,0.2
            pos_hint : {'center_x':.1, 'center_y':.1}
            text: 'Bring me back'
            on_press: root.manager.current = 'menu'

        TextInput:
            multiline:False
            id: Username
            hint_text:'Create your username'
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.5, 0.5

        TextInput:
            multiline:False
            id: email
            hint_text:'Enter your email'
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.5, 0.5

        TextInput:
            multiline:False
            id: password
            hint_text:'Enter your password'
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint:0.5, 0.5

        TextInput:
            multiline: False
            id: password_confirm
            hint_text: 'Confirm your password'
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.5, 0.5

        Button:
            text: 'Register'
            on_press: root.manager.current = 'homescreen'
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.5, 0.5

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        pos: self.pos
        size: root.size
        id: test2

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'images/delorean.jpg'

        Label:
            text:'WELCOME!'
            font_size: 45
            bold: True
            italic: True
            outline_color: (0,0,0)
            outline_width: 2

        Button:
            text: 'take me back to the first screen'
            on_press: root.manager.current = 'welcome'
            size_hint: 1, .2