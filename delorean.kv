<WelcomeScreen>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Button:
            text: 'Get started'
            on_press: root.manager.current = 'menu'
            background_color: 0,0,0,0

            Image:
                source: 'images/delorean.jpg'
                allow_stretch: True
                size: self.parent.size

<MenuScreen>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 100

        Button:
            text: 'Login'
            font_size: 40
            size_hint: (1, 0.5)
            on_press: root.manager.current = 'login'
            background_color: 0,0,0,0

        Button:
            text: 'Sign Up'
            font_size: 40
            size_hint: (1, 0.5)
            on_press: root.manager.current = 'register'
            background_color: 0,0,0,0

<LoginScreen>
    BoxLayout:
        orientation: 'vertical'
        pos: self.pos
        size: root.size
        id: test2
        spacing: 10
        padding: 50

        Button:
            size_hint:0.2,0.3
            pos_hint : {'center_x': .05, 'center_y':.1}
            on_press: root.manager.current = 'menu'
            background_color: 0,0,0,0

            Image:
                source: 'images/back.png'
                size: self.parent.size
                pos: self.parent.pos

        Label:
            text: 'DeLorean'
            font_size: 40
            bold: True

        Label:
            text: 'Welcome back!'
            font_size: 24
            bold: True

        Label:
            text: 'Email or Username'
            halign: 'left'
            size_hint: 0.67, 0.5

        TextInput:
            multiline:False
            id: email_or_username
            hint_text:'Email or Username'
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.5, 0.5
            height:0.5

        Label:
            text: 'Password'
            halign: 'left'
            size_hint: 0.595, 0.5

        TextInput:
            multiline:False
            id: password
            hint_text:'Enter your password'
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.5, 0.5
            spacing: 50
            password: True
            password_mask: '*'

        Button:
            text: 'Log In'
            on_press: root.manager.current = 'homescreen'
            pos_hint: {'center_x': 0.5, 'center_y': 0.705}
            size_hint: 0.5, 0.5
            background_color: 152/255, 23/255, 103/255, 1
            on_press: root.login()

<RegisterScreen>
    BoxLayout:
        orientation: 'vertical'
        pos: self.pos
        size: root.size
        id: test2
        spacing: 10
        padding: 50

        Button:
            size_hint:0.2,0.4
            pos_hint : {'center_x': .05, 'center_y':.1}
