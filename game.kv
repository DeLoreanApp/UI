<GameFinalPage>:
    name:'final'
    canvas.before:
        Rectangle:
            size:self.size
            source: 'images/game/final.png'

    FloatLayout:
        Button:
            size_hint:0.4,0.15
            pos_hint: {"x":0.03,"y":0.025} 
            on_release:app.root.current = 'q3'
            background_normal:'images/game/backbtn.png'
            background_down:'images/game/backbtn.png'
        Button:
            size_hint:0.4,0.15
            pos_hint: {"x":0.55,"y":0.025}
            on_release: root.reset_window_size(); app.root.current = 'camera'
            background_normal:'images/game/homebtn.png'
            background_down:'images/game/homebtn.png'
